#!/bin/bash

mkdir -p "${XDG_CONFIG_HOME}/tmux"

ln -fs "${HOME}/.dotfiles/shell/zshenv"    "${HOME}/.zshenv"
ln -fs "${HOME}/.dotfiles/shell/zshrc"     "${HOME}/.zshrc"
ln -fs "${HOME}/.dotfiles/shell/tmux.conf" "${XDG_CONFIG_HOME}/tmuc/tmux.conf"
ln -fs "${HOME}/.dotfiles/shell/nixpkgs"   "${XDG_CONFIG_HOME}/nixpkgs"

curl -fsSL https://starship.rs/install.sh | bash

source "${HOME}/.zshrc"
